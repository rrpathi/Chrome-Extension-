{
    "name": "Hello Extensions",
    "description" : "Save items with one click.",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
      "scripts": ["background.js","main.js"],
      "persistent": false
    },
    "permissions": ["storage","contextMenus","tabs"],
    "browser_action": {
      "default_popup": "hello.html",
      "default_icon": "hello_extensions.png"
    }
     
  }